<% title "Car Types" %>

<table>
  <tr>
    <th>Car Brand</th>
    <th>Name</th>
  </tr>
  <% for car_type in @car_types %>
    <tr>
      <td><%=h car_type.car_brand_id %></td>
      <td><%=h car_type.name %></td>
      <td><%= link_to "Show", car_type %></td>
      <td><%= link_to "Edit", edit_car_type_path(car_type) %></td>
      <td><%= link_to "Destroy", car_type, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Car Type", new_car_type_path %></p>
