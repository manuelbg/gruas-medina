	<% User.no_admin.each do |user| %>
	<div class="user">
		<div class="name field"><%= link_to user.name, user_path(user) %></div>
		<div class="email field"><%= link_to user.email, user_path(user) %></div>
		<div class="actions field" style="text-align: center">
			<%= link_to image_tag('add_admin_icon.png', :border => 0, :title => 'Hacerlo Administrador'), user_path(user, 'user[role]' => 'admin'), :method => :put %>
			<%= link_to image_tag('edit_icon.png', :border => 0, :title => 'Editar'), edit_user_path(user) %>
			<%= link_to image_tag('delete_icon.png', :border => 0, :title => 'Eliminar'), user_path(user), :method => :delete, :confirm => '¿Estas seguro de eliminar a este cliente?' %>
		</div>
		<div class="clear"></div>
	</div>
	<% end %>
</div>